# Serial port for Meshtastic device
SERIAL_PORT=/dev/ttyACM0

# Dry run mode (no DMs sent, no OSM API calls)
DRY_RUN=false

# Timezone
TZ=America/Bogota

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Daily broadcast (optional, once per 24h)
DAILY_BROADCAST_ENABLED=false

# Data directory (default: /var/lib/lora-osmnotes)
# DATA_DIR=/var/lib/lora-osmnotes
